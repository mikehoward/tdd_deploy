#!/usr/bin/env ruby

LIB_DIR = File.expand_path('../../lib', __FILE__)
HOST_TESTS_DIR = File.join('tdd_deploy', 'host_tests')
SITE_TESTS_DIR = File.join('tdd_deploy', 'site_tests')
$:.unshift LIB_DIR


require 'tdd_deploy'

class TddDeployRunner < TddDeploy::Base
  def load_all_tests
    [HOST_TESTS_DIR, SITE_TESTS_DIR].each do |dir|
      Dir.new(File.join(LIB_DIR, dir).each do |fname|
        require File.join(dir, fname)
      end
    end
  end
  
end

